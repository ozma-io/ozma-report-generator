<div id="addSchemaModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Добавление схемы шаблонов</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="addSchemaForm">
                    <label>Название</label>
                    @Html.TextBox("Name", null, new { @required = "required", @maxlength = "50", @onkeypress = "CheckCharacters(event)" })
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="Add('Schema');">Добавить</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>
